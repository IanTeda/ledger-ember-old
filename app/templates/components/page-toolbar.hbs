{{!-- https://github.com/miguelcobain/ember-paper/blob/master/tests/dummy/app/templates/components/page-toolbar.hbs --}}
{{#paper-toolbar class="md-whiteframe-1dp page-main-toolbar"}}
  {{#paper-toolbar-tools}}

    {{!-- Sidenav Menu Button (on mobile) --}}
    {{#paper-sidenav-toggle name="left" as |toggleAction|}}
      {{#paper-button iconButton=true classNames="hide-gt-sm" onClick=(action toggleAction)}}
        {{paper-icon "menu"}}
      {{/paper-button}}
    {{/paper-sidenav-toggle}}

    {{!-- Toolbar Title --}}
    <h2 class="page-toolbar-title">
      {{pageTitle}}
    </h2>

    {{!-- Right Toolbar Buttons --}}
    <span class="flex"></span>
    {{#if createRoute}}
      {{#paper-button href=createRoute}}
        Create
      {{/paper-button}}
    {{/if}}
  {{/paper-toolbar-tools}}
{{/paper-toolbar}}