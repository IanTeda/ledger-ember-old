{{#paper-card class="payee-detail" as |card|}}

  {{!-- Card Image --}}
  {{card.image src=payee.image alt=payee.name title=payee.name}}

  {{!-- Card Title with Menu --}}
  {{#card.title as |title|}}
    {{#title.text as |text|}}
      <div class="layout-row flex">
        <div class="flex">{{#text.headline}}Payee {{payee.number}}{{/text.headline}}</div>
        <div class="menu flex layout-align-end">
          {{#paper-menu as |menu|}}
            {{#menu.trigger}}
              {{#paper-button onClick=null iconButton=true}}
                {{paper-icon "more_vert" class="md-menu-origin"}}
              {{/paper-button}}
            {{/menu.trigger}}

            {{#menu.content width=2 as |content|}}
              {{#each menuItems as |item|}}
                {{#content.menu-item onClick=(action item.action)}}
                  <span class="md-menu-align-target">{{item.title}}</span>
                {{/content.menu-item}}
              {{/each}}
            {{/menu.content}}
          {{/paper-menu}}
        </div>
      </div>
    {{/title.text}}
  {{/card.title}}

  {{!-- Card Content --}}
  {{#card.content}}

    <div class="layout-column flex">
      {{paper-input class="flex-100" type="text" label="Payee Name" placeholder="Enter Payee Name" value=payee.name onChange=(action (mut payee.name)) }}

      {{paper-input class="flex-100" type="text" label="Payee Image" placeholder="Enter Payee Image" value=payee.image onChange=(action (mut payee.image)) }}

      {{paper-input class="flex-100" type="text" label="Payee Website" placeholder="Enter Payee Website" value=payee.website onChange=(action (mut payee.website))}}

      {{paper-input class="flex-100" textarea=true label="Payee Description" placeholder="Enter Payee Description" value=payee.description onChange=(action (mut payee.description)) block=true maxlength=300 passThru=(hash rows=7 maxRows=7)}}
    </div>

  {{/card.content}}

  {{!-- Card Actions --}}
  {{#card.actions}}
    {{#paper-button raised=true primary=true onClick=(action "updatePayee")}}UPDATE{{/paper-button}}
  {{/card.actions}}

{{/paper-card}}

{{#if confirmDeleteDialog}}
  {{dialog-confirm-delete name=payee.name message="Please confirm deletion of payee" delete=(action "deletePayee")}}
{{/if}}

{{yield}}